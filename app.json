{
  "expo": {
    "name": "basic-mobile",
    "slug": "basic-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/icon.png",
    "scheme": "basicmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/icons/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.snb.mobile",

      "usesApplePay": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-secure-store",

      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.snb.club",
          "enableGooglePay": true,
          "applePay": true
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "7ba975d3-6c85-4f03-a433-21b68517c4cb"
      }
    },

    "owner": "arne_kittel"
  }
}
